<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Menu_Activity" >

    <Button
        android:id="@+id/button.Instrucoes"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button.Jogar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/botao_dica"
         />

    <Button
        android:id="@+id/button.Jogar"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button.Instrucoes"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/botao_jogar" 
        android:tag="isFirst"/>

    <Button
        android:id="@+id/button.Sair"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button.Instrucoes"
        android:layout_below="@+id/button.Instrucoes"
        android:layout_marginTop="24dp"
        android:background="@drawable/botao_sair" />

</RelativeLayout>