<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundo_ii"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_Confirmar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/validar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Confirmar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        
         <TextView
        android:id="@+id/textView.Mensagem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensagem1"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:textColorHint="#000000"
        android:textSize="15pt" />
        
        <TextView
        android:id="@+id/textView.Mensagem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensagem2"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textColorHint="#FFFF00"
        android:textSize="15pt" />
        
         <TextView
        android:id="@+id/textView.Mensagem3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensagem3"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:textColorHint="#000000"
        android:textSize="15pt" />
        
    </LinearLayout>

</RelativeLayout>